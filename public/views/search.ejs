<div class="field-input">
  <i class="searchIcon fas fa-search"></i>
  <input id="searchinput" autocomplete="off" type="text" placeholder="Search"/><span> </span>
</div>


    <!-- Page Content -->
    <div class="container">
        <% if(!results) { %>
        <div class="pageContent">
            Not Found.
        </div>
        <% } else if(results.length == 0) { %>
        <div class="pageContent">
            Not Found.
        </div>
        <% } else if(results.length > 0) { %>
        <div class="content">
            <% results.forEach(function(movie) { %>
            <div class="imageHolder">
                <a id="poster" href="/movie/<%= movie.movieId %>"><img src="<%= movie.poster %>"></a>
                <div class="caption">
                    <div class="text">
                        <%= movie.name %>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="pageContent">
            Find what to watch next.
        </div>
        <% } %>
    </div>
    <!-- /.container -->

  <!-- Bootstrap core JavaScript -->
  <script>
    $(document).ready(function() {
        $('#searchinput').focus();
    });

    $(document).keypress(function(e) {
      let searchinput = $('#searchinput').val();
      if(e.which == 13 && searchinput != "") {
        $( "#searchForm" ).submit();
      }
    });

  </script>
</body>

</html>